@import '../../common/css/mixin.styl';

.main_content {
    padding: rem(10px) 0;
    background: #f5f5f5;

    .inner_content {
        background: #fff;
        position: relative;
    }

    .xact_list {
        width: 100%;
        overflow: hidden;
        visibility: visible;
        transform: translate3d(0,0,0);
        transition:transform 0.3s ease-in-out;
        .xact {
            padding: rem(10px);
            border-bottom: 1px dotted #9f9791;

            .xact_img {
                width: 100%;
                position: relative;

                a {
                    display: block;
                    position: relative;
                    overflow: hidden;
                    padding-top: 66.22%;
                    color: #fff;

                    img {
                        width: 100%;
                        position: absolute;
                        left: 0;
                        top: 0;
                        height: auto;
                    }

                    .status {
                        position: absolute;
                        left: 0;
                        top: rem(10px);
                        display: inline-block;
                        padding: rem(10px) rem(15px);
                        font-size: rem(16px);
                    }

                    .status.proceed {
                        background-color: #dd1515;
                    }

                    .status.finish {
                        background-color: #ababab;
                    }

                    .status.unstart {
                        background-color: #30b6aa;
                    }
                }
            }

            .xact_text {
                .text_txt {
                    padding-top: rem(10px);

                    a {
                        display: block;

                        .tj, h3 {
                            font-size: 24px;
                            color: #666;
                            margin-bottom: 10px;
                            text-overflow: ellipsis;
                            overflow: hidden;
                            white-space: nowrap;
                        }
                    }

                    h2 {
                        line-height: rem(36px);
                        color: #dd1515;
                    }
                }
            }
        }
    }
    .xact_list.xact_list_active{
        height:0;
        overflow:hidden;
        visibility: hidden;
        transform: translate3d(-100%,0,0);
        }
}

.activity_listpage {
    width: 100%;
    position: relative;
    right: 0;
    top: 0;
    background: #fff;

    .xdetail {
        padding: rem(20px) rem(10px);
        opacity: 0;
        transition: all 0.3s ease;

        .newsContent {
            margin-bottom:rem(20px);
            .detailContent {
                h1 {
                    font-size: rem(20px);
                    text-align: center;
                }

                p {
                    color: #444;
                    line-height: rem(28px);
                }

                img {
                    max-width: 100%;
                    margin: 15px auto;
                    display: block;
                }
            }
        }

        .intro_img_box {
            .intro_img {
                display:block;
                margin-bottom: rem(10px);
                overflow: hidden;
                position: relative;
                img{
                    max-width:100%;
                    width:100%;
                    display:block;
                }
            }
        }
    }

    .xdetail.showdetail {
        opacity: 1;
    }

    .close_return_btn {
        position: fixed;
        right: rem(10px);
        top: rem(7px);
        z-index:99;
        color:#fff;

        .iconfont {
            font-size: rem(24px);
        }
    }
}

.activity_listpage.animated {
    animation-duration: 0.2s;
    animation-delay: 1s;
}

.photography_title {
    margin-bottom: rem(25px);

    .cen_tit {
        width: 100%;
        position: relative;
        text-align: center;
        margin-bottom: rem(15px);

        .line {
            width: 100%;
            height: 1px;
            background: #d2d2d2;
            position: absolute;
            left: 0;
            top: rem(16px);
        }

        .caption {
            padding: 0 rem(10px);
            background: #fff;
            position: relative;
            display: inline-block;
            color: #030305;
            font-size: rem(16px);

            .txt {
                display: inline-block;
                padding: 0 rem(20px);
                height: rem(30px);
                line-height: rem(30px);
                border: 1px solid #d2d2d2;

                a {
                    color: #030305;
                }
            }
        }
    }
}
