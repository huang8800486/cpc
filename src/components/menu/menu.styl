@import '../../common/css/mixin.styl';

.menu {
    &.active {
        .menu_list {
            -webkit-transform: translate3d(0, 0, 0);
            -ms-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
        }
    }

    .menu_list {
        position: fixed;
        left: 0;
        top: 0;
        width: rem(200px);
        height: 100%;
        background-color: #22262a;
        transition: all 0.3s ease;
        -webkit-transform: translate3d(-100%, 0, 0);
        -ms-transform: translate3d(-100%, 0, 0);
        transform: translate3d(-100%, 0, 0);
        z-index: 101;
        padding-top: rem(196px);
        -webkit-box-sizing: border-box;
        box-sizing: border-box;

        .menu_header {
            width: 100%;
            position: absolute;
            left: 0;
            top: 0;
            background: #262d30;
            padding: rem(30px) 0;
            height: rem(196px);
            -webkit-box-sizing: border-box;
            box-sizing: border-box;

            .menu_avatar {
                width: rem(104px);
                height: rem(84px);
                margin: 0 auto rem(20px);
                radius();

                img {
                    display: block;
                    max-width: 100%;
                    width: 100%;
                }
            }

            .menu_title {
                color: #fff;
                text-align: center;
                font-size: rem(16px);
            }
        }

        .menu_ul {
            width: 100%;
            height: 100%;
            overflow: hidden;

            .menu_scroll {
                width: 100%;
                height: 100%;
                overflow-y: auto;

                .item {
                    padding: rem(20px);
                    text-indent: rem(10px);
                    font-weight: 700;
                    display: block;
                    color: #a6adb3;
                    font-size: rem(16px);
                    position: relative;
                }

                .item.router-link-active {
                    color: #01aef3;
                }

                .item:before {
                    border-1px();
                }
            }
        }
    }
}
