@import '../../common/css/mixin.styl';

.main_content {
    width: 100%;
    overflow: hidden;
    background: #f5f5f5;

    .interspace {
        padding: rem(20px) 0 rem(10px);
        background: #fff;
        margin-bottom: rem(10px);
    }

    .studio_active {
        padding: 0 rem(10px);

        .list_itme {
            margin-bottom: rem(10px);

            .img_box {
                display: block;
                padding-top: 50%;
                position: relative;
                overflow: hidden;
                color: #fff;
                font-size: rem(16px);

                .padding_img {
                    position: absolute;
                    left: 0;
                    top: 0;
                    width: 100%;
                    height: 100%;

                    img {
                        width: 100%;
                        display: block;
                    }

                    .text {
                        position: absolute;
                        left: 0;
                        bottom: 0;
                        width: 100%;
                        background: rgba(0, 0, 0, 0.4);
                        text-align: center;

                        .txt {
                            padding: rem(15px);
                        }
                    }
                }
            }
        }
    }

    .studio_recommend_index {
        .intro_photo {
            .list_itme {
                margin-bottom: rem(25px);
                padding: 0 rem(10px);

                .img_box {
                    position: relative;
                    width: 100%;
                    display: block;
                    color: #a8a8a8;
                    overflow: hidden;

                    .padding_img {
                        position: relative;
                        overflow: hidden;
                        padding-top: 50%;

                        img {
                            width: 100%;
                            transition: all 0.3s;
                            position: absolute;
                            left: 0;
                            top: 0;
                        }
                    }
                }

                .scene_price {
                    margin-top: rem(10px);

                    .ti {
                        font-size: rem(20px);
                        color: #030305;
                        margin-right: rem(10px);
                        float: left;
                    }

                    .price {
                        font-size: rem(16px);
                        color: #a8a8a8;
                        margin-top: rem(3px);
                        ell();
                        float: left;
                    }
                }
            }
        }
    }

    .activity_index {
        .new_active_img {
            padding: 0 rem(10px);
            margin-bottom: rem(20px);
            .active_padding {
                width: 100%;
                position: relative;

                .pad_act {
                    position: relative;
                    overflow: hidden;
                    margin-bottom: rem(5px);
                    padding-top: 66.8%;

                    a {
                        position: absolute;
                        left: 0;
                        top: 0;
                        width: 100%;
                        height: 100%;
                        color: #000;

                        img {
                            width: 100%;
                            display: block;
                        }
                    }
                }

                .text {
                    position: absolute;
                    left: 0;
                    bottom: 0;
                    background: rgba(0, 0, 0, 0.4);
                    color: #fff;
                    padding:rem(10px) 0;
                    .txt {
                        padding: 0 rem(10px);
                        height:rem(67px);
                        overflow:hidden;
                        ellMore(3)
                    }
                }
            }

            .active_tit {
                width: 100%;
                font-size: rem(22px);
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                text-align: center;
                display: block;
                color: #000;
                p{
                    width:100%;
                    ell();
                }
            }
        }
    }
}

.photography_title {
    margin-bottom: rem(25px);

    .cen_tit {
        width: 100%;
        position: relative;
        text-align: center;
        margin-bottom: rem(15px);

        .line {
            width: 100%;
            height: 1px;
            background: #d2d2d2;
            position: absolute;
            left: 0;
            top: rem(16px);
        }

        .caption {
            padding: 0 rem(10px);
            background: #fff;
            position: relative;
            display: inline-block;
            color: #030305;
            font-size: rem(16px);

            .txt {
                display: inline-block;
                padding: 0 rem(20px);
                height: rem(30px);
                line-height: rem(30px);
                border: 1px solid #d2d2d2;

                a {
                    color: #030305;
                }
            }
        }
    }
}
